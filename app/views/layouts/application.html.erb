<!DOCTYPE html>
<html>
  <head>
    <title>Catálogo</title>
     <%= csrf_meta_tags %>
     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    
  </head>

  <body>
  <main class= "container">
  <% if notice %>
  <%= notice %>
  <% end %> <% if alert%>
  <%= alert%>
  <% end %>
  <p class = "navbar-text pull-right">
       <% if user_signed_in? %>
       Logueado como <%= current_user.email %>|
       <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link badge badge-pill badge-primary' %> |
       <%= link_to 'Salir', destroy_user_session_path, method: :delete, :class => 'navbar-link badge badge-pill badge-secondary' %> |
       <% else %>
       <%= link_to 'Registrarse', new_user_registration_path, :class => 'navbar-link badge badge-pill badge-primary' %> |
       <%= link_to 'Iniciar sesión', new_user_session_path, :class => 'navbar-link' %> |
       <% end %>
  </p>
  <div class="row">
  <div class="col-sm-2">
  <div> <%= link_to 'Categorias','/categories' %> </div>
  <div> <%= link_to 'Productos','/products' %> </div>
  <div> <%= link_to 'Partes','/parts' %> </div>
  </div>
  <div class="col-sm-10">

    <%= yield %>
    </main>
  </body>
</html>
